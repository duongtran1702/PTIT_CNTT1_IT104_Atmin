{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",                 // mỗi file tách scope
    "moduleResolution": "node",
    "outDir": "./dist",              // JS xuất ra dist/
    "rootDir": "./src",              // chỉ build src/
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
